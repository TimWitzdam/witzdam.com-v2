---
import LinkArrow from "../../public/icons/link-arrow.svg?raw";
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<div
  class="flex items-center gap-2 opacity-60 hover:opacity-100 transition-opacity text-lg"
>
  <Fragment set:html={LinkArrow} />
  <a href={href}>{text}</a>
</div>
