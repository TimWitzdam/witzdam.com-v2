---
import TechStackItem from "./TechStackItem.astro";
import Link from "./Link.astro";

interface Props {
  number: string;
  name: string;
  description: string;
  image: {
    src: string;
    alt: string;
  };
  website_url: string;
  case_study_url: string;
}

const { number, name, description, image, website_url, case_study_url } =
  Astro.props;
---

<div>
  <p class="text-center mb-4 text-6xl font-black out opacity-60 md:hidden">
    {number}
  </p>
  <div
    class="p-8 md:flex md:gap-4 bg-opacity-60 bg-gradient-to-b from-[#252525] to-[#1B1B1B] rounded-[3rem] relative"
  >
    <div
      class="absolute -inset-[1px] bg-gradient-to-b from-white to-[#ffffff66] rounded-[3rem] -z-10 p-2 opacity-30"
      style="pointer-events: none;"
    >
    </div>

    <div class="hidden md:block md:absolute md:-top-10 md:-left-5 -z-10">
      <span class="text-6xl font-black out opacity-60">{number}</span>
    </div>
    <p class="text-2xl font-bold mb-2">{name}</p>
    <p class="opacity-60 mb-6">{description}</p>
    <img
      src={image.src}
      alt={image.alt}
      width="150"
      class="rounded-xl mx-auto mb-4"
    />
    <span class="opacity-60 mb-4">Tech stack:</span>
    <div class="grid grid-cols-2 grid-rows-1 gap-4">
      <TechStackItem
        name="Python"
        image={{
          src: "/images/tech/python.svg",
          alt: "Python Logo",
        }}
      />
      <TechStackItem
        name="Javascript"
        image={{
          src: "/images/tech/javascript.svg",
          alt: "Javascript Logo",
        }}
      />
      <TechStackItem
        name="Postgres"
        image={{
          src: "/images/tech/postgres.svg",
          alt: "Postgres Logo",
        }}
      />
      <TechStackItem
        name="Nuxt 3"
        image={{
          src: "/images/tech/nuxt_3.svg",
          alt: "Nuxt 3 Logo",
        }}
      />
      <TechStackItem
        name="Vue JS"
        image={{
          src: "/images/tech/vue.svg",
          alt: "Vue JS Logo",
        }}
      />
    </div>
    <div class="mt-6 flex flex-col gap-4 text-lg">
      <Link text="Visit the website" href={website_url} />
      <Link text="Read case study" href={case_study_url} />
    </div>
  </div>
</div>

<style>
  .out {
    color: #161616;
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 1),
      rgba(255, 255, 255, 0)
    );
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-stroke: 2px transparent;
  }
</style>
