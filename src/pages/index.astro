---
import Layout from "../layouts/Layout.astro";
import LinkArrow from "../../public/icons/link-arrow.svg?raw";
---

<Layout>
  <section class="mt-20">
    <div class="text-center mb-16 px-6 max-w-6xl mx-auto">
      <h1 class="text-5xl font-bold mb-4">ðŸ‘‹ Hey I'm Tim</h1>
      <p>
        I'm Tim Witzdam, a full time student from Germany who also loves
        building cool things using code.
      </p>
      <div class="flex justify-center items-center gap-4 mt-4">
        <a
          href="mailto:contact@witzdam.com"
          class="flex items-center gap-2 opacity-60 underline underline-offset-4"
        >
          <Fragment set:html={LinkArrow} />
          <span>Email me</span>
        </a>
        <a
          href="/tools"
          class="flex items-center gap-2 opacity-60 underline underline-offset-4"
        >
          <Fragment set:html={LinkArrow} />
          <span>Useful tools</span>
        </a>
      </div>
    </div>
    <div class="grid place-items-center relative w-fit mx-auto">
      <img
        src="/images/pfp.png"
        alt="Tim Witzdam"
        class="rounded-full w-40 h-40 mt-8"
      />
      <div class="hidden min-[400px]:block">
        <div
          class="rounded-lg bg-[#D9D9D9] w-12 h-12 absolute -bottom-20 left-4 -rotate-6 scale-100 opacity-[53%]"
        >
        </div>
        <div
          class="rounded-lg bg-[#D9D9D9] w-12 h-12 absolute -bottom-20 -right-2 rotate-[20deg] scale-50 opacity-[17%]"
        >
        </div>
        <div
          class="rounded-lg bg-[#D9D9D9] w-12 h-12 absolute bottom-4 -right-14 rotate-[20deg] scale-75 opacity-[27%]"
        >
        </div>
        <div
          class="rounded-lg bg-[#D9D9D9] w-12 h-12 absolute top-10 -right-28 rotate-[-8deg] scale-100 opacity-[37%]"
        >
        </div>
        <div
          class="rounded-lg bg-[#D9D9D9] w-12 h-12 absolute top-0 right-0 rotate-[14deg] scale-[30%] opacity-[71%]"
        >
        </div>
        <div
          class="rounded-lg bg-[#D9D9D9] w-12 h-12 absolute top-0 -left-14 rotate-[-10deg] scale-[55%] opacity-[27%]"
        >
        </div>
        <div
          class="rounded-lg bg-[#D9D9D9] w-12 h-12 absolute top-32 -left-20 rotate-[-40deg] scale-75 opacity-[53%]"
        >
        </div>
      </div>
    </div>
  </section>
</Layout>
